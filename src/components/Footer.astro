---
import { siteConfig } from '@/site-config'

const today = new Date()
---

<footer class='flex justify-center items-center w-full px-16 h-28 border-t-2'>
	&copy; {today.getFullYear()}
	{siteConfig.title}. All rights reserved. <span class='flex flex-none flex-row items-center'>
		<p class='ml-4 border-l-2 border-green-300 py-1 pl-4 text-sm text-gray-600 dark:text-gray-300'>
			<a
				href={import.meta.env.BASE_URL + 'blog'}
				class='ml-1 text-green-600 hover:text-orange-600 dark:text-green-300 dark:hover:text-orange-300'
				rel='noopener noreferrer'
				target='_blank'
			>
				Blog
			</a>
		</p>
		<p class='ml-4 border-l-2 border-green-300 py-1 pl-4 text-sm text-gray-600 dark:text-gray-300'>
			<a
				href={import.meta.env.BASE_URL + 'about'}
				class='ml-1 text-green-600 hover:text-orange-600 dark:text-green-300 dark:hover:text-orange-300'
				rel='noopener noreferrer'
				target='_blank'
			>
				About
			</a>
		</p>
		<p
			class='text-sm text-white-600 dark:text-gray-300 lg:ml-4 lg:border-l-2 lg:border-green-300 lg:py-1 lg:pl-4 dark:lg:border-green-600'
		>
			<a
				href={import.meta.env.BASE_URL + 'privacy-policy'}
				class='ml-1 text-green-600 hover:text-orange-600 dark:text-green-300 dark:hover:text-orange-300'
			>
				Privacy Policy
			</a>
		</p>
	</span>
</footer>
